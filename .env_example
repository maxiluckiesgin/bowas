# Docker host port mapping
HOST_PORT=3000
FRONTEND_PORT=8080

# JWT config
JWT_SECRET=replace-with-strong-random-secret
JWT_ISSUER=bowas
JWT_AUDIENCE=bowas-clients
JWT_TTL_SECONDS=3600

# CORS
CORS_ORIGIN=*

# Auto-reply sqlite
AUTOREPLY_DB_PATH=/home/$USER/bowas/data/autoreply.db

# Login credentials for /login
AUTH_USERNAME=admin
AUTH_PASSWORD=replace-with-strong-password

# Personal API sync target directory (escape spaces with \ )
TARGET_DIR=/home/$USER/personal/BOWAS\ API
